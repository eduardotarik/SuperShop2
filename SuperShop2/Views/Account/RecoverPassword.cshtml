@model SuperShop2.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "RecoverPassword";
}

<h2>RecoverPassword</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="d-flex justify-content-center">
            <!-- Added 'd-flex' and 'justify-content-center' classes -->
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Recover password" class="btn btn-primary" />
                    <a asp-action="Login" class="btn btn-success">Back to login</a>
                </div>
            </form>
        </div>
        <div class="text-success">
            <p>
                @ViewBag.Message
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
